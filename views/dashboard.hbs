<h6>Dashboard</h6>

<h5>Welcome {{name}}</h5>
<p>Here are your stories</p>
{{#if stories}}
    <table class="striped">
        <thead><tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr></thead>
        {{#each}}
            <tr>
                <td><a href="/stories/{{id}}"></a>{{title}}</td>
                <td>{{createdAt}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td></td>
            </tr>
        {{/each}}
    </table>
{{else}}
    <p>You have not created any stories.</p>
{{/if}}